@* @model MvcDatabaseApp.Models.ViewModels.ProductViewModel *@
@{
    ViewData["Title"] = "Product Statistics";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Product Statistics</h1>
            <p class="text-muted">Overview of your product inventory</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-4 mb-3"></i>
                    <h5 class="card-title">Total Active Products</h5>
                    <p class="card-text display-4">@ViewBag.ActiveCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack display-4 mb-3"></i>
                    <h5 class="card-title">Total Inventory Value</h5>
                    <p class="card-text display-4">$@ViewBag.TotalValue.ToString("N2")</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <i class="bi bi-tags display-4 mb-3"></i>
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text display-4">@(ViewBag.Categories != null ? ((List<string>)ViewBag.Categories).Count : 0)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Statistics -->
    @if (ViewBag.CategoryStats != null)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Products by Category</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Product Count</th>
                                        <th>Percentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var total = ViewBag.ActiveCount;
                                        var stats = ViewBag.CategoryStats as Dictionary<string, int>;
                                    
                                   if(stats!=null){
                                    foreach (var stat in stats)
                                    {
                                        var percentage = total > 0 ? (stat.Value * 100.0 / total) : 0;
                                        <tr>
                                            <td>@stat.Key</td>
                                            <td>@stat.Value</td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar" role="progressbar"
                                                         style="width: @percentage%;"
                                                         aria-valuenow="@percentage"
                                                         aria-valuemin="0"
                                                         aria-valuemax="100">
                                                        @percentage.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add New Product
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-list-ul"></i> View All Products
                            </a>
                            <a href="/" class="btn btn-outline-info">
                                <i class="bi bi-house"></i> Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>