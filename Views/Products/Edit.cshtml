@model MvcDatabaseApp.Models.Product
@{
    ViewData["Title"] = "Editing Projects";
}
<h1>Edit The Products</h1>
<div class="row">
    <div class="col-md-6">
     
            <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            @* <div class="alert alert-success alert-dismissible fade show" role="alert">
                <p>hello world</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div> *@
    <div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control"/>
    <div asp-validation-for="Name" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <div asp-validation-for="Price" class="text-danger"></div>
            </div>
            <div class="form-group mb-3">
    <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" rows=3 />
                <div asp-validation-for="Description" class="text-danger"></div>
            </div>
            <div class="form-group">
                
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">BACK</a>
                
            </div>
        
</form>

    </div>
</div>
<!-- Missing this will disable client-side validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}